// 7 ClassStatement
class Person {
    age = 18;
    constructor = function(name, age) {
        super();
        this.name = name;
        if (age) {
            this.age = age;
        }
    }
    sayName = function() {
        print(this.name + "," + this.age);
    }
}

var tom = new Person("Tom", 30);
var lily = new Person("Lily");
tom.sayName();
lily.sayName();

