// 面向对象的继承与多态
class Animal {
    constructor = function(name) {
        super();
        this.name = name;
    }
    sayName = function() {
        print("My name is " + this.name);
    }
}
class Dog extends Animal {
    constructor = function(name) {
        super(name);
    }
    sayName = function() {
        print("My name is " + this.name + ", I'm a dog");
    }
}

var tom = new Animal("Tom");
var lily = new Dog("Lily");

tom.sayName();
lily.sayName();

// 类似js的处理逻辑，B.c会调用A.b，而A.b会调用this.a()，这里的this指向B对象，所以最后打印B.a
class A {
  age = 1;
  a=function() {
    print("A.a");
  }
  b=function() {
    this.a();
  }
}

class B extends A{
  a=function() {
    print("B.a");
  }
  b=function() {
    print("B.b");
  }
  c=function() {
    super.b();
  }
}

new B().c();
